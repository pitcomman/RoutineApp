<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoutineApp</title>
    <link rel="stylesheet" href="~/css/site.css" />


    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-6.1.1-web/css/all.css" rel="stylesheet" />

    @* <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"> *@
    @* <link rel="stylesheet" href="~/css/mystyle.css" /> *@
    @* <link href="~/lib/datatables/css/dataTables.semanticui.css" rel="stylesheet" />  *@
    @* <link href="~/lib/datatables/Buttons-1.7.0/css/buttons.dataTables.min.css" rel="stylesheet" /> *@
    @* <link href="~/lib/datatables/Select-1.3.3/css/select.dataTables.min.css" rel="stylesheet" /> *@
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script> *@
    
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js" type="text/javascript"></script>

</head>


<style>


*{
  margin: 0;
  padding: 0;
  box-sizing:border-box;
  font-family:sans-serif;
  letter-spacing: .1em;
}

body {
    display: flex;
}


.menu{
  @* position:fixed; *@
  max-width:100%;
  width: 300px;
  height:100vh;
  background: #000;
  color:#fff;
  transition: .6s;
}
.menu.active {
  width:70px;
  overflow-x: hidden;
  transition: .6s;
}

.logo {
  display:flex;
}

.logo i{
  width:30px;
}

.menu-icon{
  width:100%;
  display:flex;
  justify-content:space-between;
  align-items:center;
   padding:20px;
}

.menu.active .logo {
  display:none;
   transition: .6s;
}
.menu.active  #botao{
  justify-content:center;
  width:100%;
  text-align:center;
   transition: .6s;
}

.menu-icon i:hover{
  color: blue;
}

.menu ul{
  margin-top:30px;
}

.menu li i{
  min-width: 50px;
  text-align:center;
}



.menu ul li{
  list-style:none;
  padding: 20px;
  display:block;
  width:100%;
}

.menu.active ul{
  background: blue;
  transition: .6s;
}
.menu.active li {
  padding: 20px 0;
  text-align:center;
   transition: .6s;
}
.menu.active li i{
   padding:10px;  
   transition: .6s;
}

.menu ul li:hover{
  background: #fff;
  color:#000;
  cursor: pointer;

}

.fas {
    color: white;
}

li a {
    display: block;
}

.list-unstyled .collapse{
    padding: 0px;
}

a {
    display: flex;
    padding-left: 10%
}

a:hover{
  background: black;
  color:#000;
  cursor: pointer;
}

</style>


<body>
    <div class="menu">
        <div class="menu-icon">
            <div class="logo"><i class="fa-solid fa-leaf"></i> My Routine</div>
            <i class="fa-solid fa-bars-staggered" id='botao'></i>
        </div>
    
        <nav class="nav">
            <ul class="list-unstyled components mb-5">
                <li class="menulist"><i class="fa-solid fa-calendar-plus"></i>Change ProcessCode</li>
                <li class="menulist"><i class="fa-solid fa-location-dot"></i>Change Chip</li>
                <li class="menulist" href="#Manual" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle collapsed"><i class="fa-solid fa-user-plus"></i>Add Operator</li>
                <div class="list-unstyled collapse" id="Manual" style="height: 0px;" aria-expanded="false"> 
                        <a class="btn-link text-white " asp-area="" asp-controller="Home" asp-action="ChangeProcessCode">- MCR </a>
                        <a class="btn-link text-white " href="http://rthsrvm01/NCIMDocument/" target="_blank">- TRDI </a>
                        <a class="btn-link text-white " href="http://rthsrvm01/NCIMDocument/" target="_blank">- TC </a>
                        <a class="btn-link text-white " href="http://rthsrvm01/NCIMDocument/" target="_blank">- OPM </a>
                        <a class="btn-link text-white " asp-area="" asp-controller="Home" asp-action="Privacy">- OPM </a>
                </div>
                <li class="menulist"><i class="fa-solid fa-location-dot"></i>SinterImport</li>


            </ul>
        </nav>
    </div>

    @* <div class = "content">

        <iframe src="https://google.com"" title="description"></iframe>

    </div> *@



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RoutineApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


<script type="text/javascript">


    const botao = document.querySelector('#botao');
    const nav = document.querySelector('.menu');

    function ativar(){
    nav.classList.toggle('active');
    }

    $("#botao").click(ativar);


</script>



</html>
